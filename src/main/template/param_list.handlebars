{{#if required}}
<td class='code required'>{{name}} *</td>
{{else}}
<td class='code'>{{name}}</td>
{{/if}}
<td>
  {{#if required}}
  <select {{#isArray this}} multiple='multiple'{{/isArray}} class='parameter required' name='{{name}}'>
  {{else}}
  <select {{#isArray this}} multiple='multiple'{{/isArray}} class='parameter' name='{{name}}'>
  {{/if}}
    {{#if required}}
    {{else}}
      {{#if defaultValue}}
      {{else}}
        {{#isArray this}}
        {{else}}
          <option selected="" value=''></option>
        {{/isArray}}
      {{/if}}
    {{/if}}
    {{#each allowableValues.descriptiveValues}}
      {{#if isDefault}}
        <option selected="" value='{{join value}}'>{{join value}} (default)</option>
      {{else}}
        <option value='{{join value}}'>{{join value}}</option>
      {{/if}}
    {{/each}}
  </select>
</td>
{{#if required}}
<td><strong>{{{join description}}}</strong></td>
{{else}}
<td>{{{join description}}}</td>
{{/if}}
<td>{{{paramType}}}</td>
<td><span class="model-signature"></span></td>